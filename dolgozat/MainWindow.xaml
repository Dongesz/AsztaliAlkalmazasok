<Window x:Class="dolgozat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Autó Jeladások" Height="600" Width="400">
    <Grid>
        <Button x:Name="BtnBeolvas" Content="Adatok betöltése" Width="150" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                Click="BtnBeolvas_Click"/>

        <ListBox x:Name="LstAdatok" Width="360" Height="250"
                 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>

        <Button x:Name="BtnUtolsoJeladas" Content="Utolsó 8 jeladás" Width="150" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,310,0,0"
                Click="BtnUtolsoJeladas_Click"/>


        <Button x:Name="BtnElsoJarmu" Content="Első jármű jelzései" Width="180" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,310,0,0"
                Click="BtnElsoJarmu_Click"/>

        <Label x:Name="LblElsoJarmu" Content="Első jármű jelzései: " Width="360"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,350,0,0"/>

        <TextBox x:Name="TxtOra" Width="40" Height="25"
                 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,380,0,0"/>

        <TextBox x:Name="TxtPerc" Width="40" Height="25"
                 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,380,0,0"/>

        <Button x:Name="BtnIdopontJelzes" Content="Keresés időpont alapján" Width="180" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,380,0,0"
                Click="BtnIdopontJelzes_Click"/>

        <Label x:Name="LblIdopontJelzes" Content="Eredmény: " Width="360"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,410,0,0"/>
    </Grid>
</Window>
